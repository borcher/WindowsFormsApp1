@model List<Data.Entity.Film>

@{
    ViewBag.Title = "Home Page";
}


@{Html.BeginForm("", "Home", FormMethod.Post, new { enctype = "multipart/form-data" });}
<div class="row">
    <div id="Buscador"><input type="text" id="film" name="film" /><input type="submit" value="SearchFilm" /></div>
    <br/>
    <div id="divcontainerInfoBuscar">
        @if (Model != null && Model.Count != 0)
        {
            foreach (Data.Entity.Film item in Model)
            {
                <div>Results</div>
                <div>
                    @item.Title  @Html.ActionLink(linkText: "View Detail", actionName: "Details", controllerName: "Home", routeValues: new { id = item.Id }, htmlAttributes: null)
                </div>
            }
        }
        else
        {
            <div>@ViewBag.Message</div>
        }
        <br />
        <br />
        <div id="divBuscarFamilyContainer">
            @Html.Action("LastVisited")
        </div>

    </div>
</div>

@{Html.EndForm();}